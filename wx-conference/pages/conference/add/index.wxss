/* pages/conference/add/index.wxss */
@import "../../../templates/collapse/collapse.wxss";

page {
  margin-bottom: 85rpx;
}

.outer-container {
  background: rgba(255, 255, 255, 1);
  margin-bottom: 32rpx;
  padding: 30rpx;
}

.title {
  width: 200rpx;
  height: 35rpx;
  font-size: 34rpx;
  font-family: "Microsoft YaHei";
  font-weight: 400;
  color: rgba(0, 0, 7, 1);
  line-height: 35rpx;
}

.theme {
  font-size: 34rpx;
  font-family: "Microsoft YaHei";
  font-weight: 400;
  color: rgba(0, 0, 7, 1);
  line-height: 35rpx;
  margin-top: 22rpx;
}

.time-title {
  font-size: 34rpx;
  font-family: "Microsoft YaHei";
  font-weight: 400;
  color: rgba(0, 0, 7, 1);
  line-height: 35rpx;
}

.time-date {
  font-size: 34rpx;
  font-family: "Microsoft YaHei";
  font-weight: 400;
  color: rgba(0, 0, 7, 1);
  line-height: 35rpx;
  margin-left: auto;
}

.time {
  font-size: 34rpx;
  font-family: "Microsoft YaHei";
  font-weight: 400;
  color: rgba(0, 0, 7, 1);
  line-height: 35rpx;
  margin-left: 28rpx;
  margin-top: 22rpx;
}

.location-title {
  font-size: 34rpx;
  font-family: "Microsoft YaHei";
  font-weight: 400;
  color: rgba(0, 0, 7, 1);
  line-height: 35rpx;
}

.agenda-container {
  margin-bottom: 32rpx;
}

.meeting-room-label {
  background-color: #fff;
  font-size: 28rpx;
  margin-right: 12rpx;
}

.radio-group-container {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.radio-group {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.radio-item-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding-top: 30rpx;
}

.radio {
  margin-right: 30rpx;
  /* margin-left: 30rpx; *//* margin-bottom: 14rpx; */
  font-size: 28rpx;
  font-family: "Microsoft YaHei";
  font-weight: 400;
  color: rgba(0, 0, 7, 1);
  line-height: 28rpx;
}

.add-room {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-top: 30rpx;
}

.add-room-text {
  background-color: rgba(229, 245, 253, 1);
  border: 1rpx solid rgba(54, 66, 250, 1);
  border-radius: 5rpx;
  box-sizing: border-box;
  padding: 10rpx;
}

.participant-container {
  position: relative;
}

.more {
  position: absolute;
  top: 0;
  right: 0;
}

.participant-number {
  position: absolute;
  line-height: 94rpx;
  top: 0;
  right: 73rpx;
}

.isOpen-container {
  font-size: 34rpx;
  font-family: "Microsoft YaHei";
  font-weight: 400;
  color: #2f2f2f;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.isOpen-text {
  /*margin-left: auto;*/
}

.isOpen-switch {
  margin-left: auto;
}

.submit-button-container {
  width: 474rpx;
  height: 94rpx;
  margin: 0 auto;
}

.submit-button {
  background: rgba(240, 149, 77, 1);
  border-radius: 6px;
}
